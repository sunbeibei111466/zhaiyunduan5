<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_debt_management_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlgproject.activity.DebtManagementSearch">


    <LinearLayout
        android:id="@+id/ll_debt_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finsh_back_iv"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sercheditor"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/serch_debt_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/sousuo" />

            <EditText
                android:id="@+id/serch_debt_et"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="请输入名称/证号/推荐编码"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/jieguo_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有您所要搜索的结果"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <include layout="@layout/load_pic_text"></include>

    </FrameLayout>


</LinearLayout>
