<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_debt_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finsh_back_teacher"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sercheditor"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/serch_teacher"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="请输入您搜索的老师"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <ImageView
                android:id="@+id/the_teacher_ser_bar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/search_bar"
                />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/the_teacher_jieguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有您所要搜索的结果"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <include layout="@layout/load_pic_text"></include>

    </FrameLayout>
</LinearLayout>