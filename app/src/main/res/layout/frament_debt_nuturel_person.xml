<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/line_layout">

            <TextView
                style="@style/tv_style"
                android:text="债事人名称:" />

            <EditText
                android:id="@+id/et_debrpeople_name_t"
                style="@style/et_style"
                android:hint="请输入真实姓名" />
        </LinearLayout>


        <LinearLayout style="@style/line_layout">

            <TextView
                style="@style/tv_style"
                android:text="身份证号:" />

            <EditText
                android:id="@+id/et_nuturel_icard_t"
                style="@style/et_style"
                android:hint="请输入身份证号/护照" />
        </LinearLayout>


        <LinearLayout style="@style/line_layout">

            <TextView
                style="@style/tv_style"
                android:text="归属地:" />

            <LinearLayout style="@style/et_style">

                <include layout="@layout/spinner"></include>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/line_layout">

            <TextView
                style="@style/tv_style"
                android:text="联系电话:" />

            <EditText
                android:id="@+id/et_nuturel_phone_t"
                style="@style/et_style"
                android:hint="请输入手机号"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout style="@style/line_layout">

            <TextView
                style="@style/tv_style"
                android:text="联系地址:" />

            <EditText
                android:id="@+id/et_nuturel_contact_address_t"
                style="@style/et_style"
                android:hint="请输入地址" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            >

            <Button
                android:id="@+id/btn_nuturel_next"
                android:layout_width="285dp"
                android:layout_height="33dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
