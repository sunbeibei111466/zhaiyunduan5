<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/image_text_asset"
            android:layout_width="46dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/label"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="名称:"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_asset_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="类型:"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_asset_leixin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="估值:"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_asset_guzhi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="数量:"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_asset_shulian"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tv_asset_bianji"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:text="编辑"
                    android:background="@drawable/login_btn"
                    android:textColor="@color/bai"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>